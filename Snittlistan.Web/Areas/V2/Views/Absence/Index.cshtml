@model List<Snittlistan.Web.Areas.V2.Indexes.AbsenceIndex.Result>

<div class="row">
    <div class="span6">
        <h2>Anmäld frånvaro</h2>
    </div>
</div>
<div class="row">
    <div class="span6">
        @if (Request.IsAuthenticated)
        {
            <a href="@Url.Action("Create")">
                <i class="sprite-glyphicons_006_user_add"></i>
                Registrera frånvaro
            </a>
        }
    </div>
</div>
<div class="row">
    <div class="span8">
    <table class="table table-condensed table-striped">
        <tr>
            <th>Namn</th>
            <th>Från</th>
            <th>Till</th>
            @if (Request.IsAuthenticated)
            {
                <th></th>
                <th></th>
            }
        </tr>
        @foreach (var absence in Model)
        {
            <tr>
                <td>@absence.PlayerName</td>
                <td>@absence.From.ToShortDateString()</td>
                <td>@absence.To.ToShortDateString()</td>
                    @if (Request.IsAuthenticated)
                    {
                        <td>
                            <a href="@Url.Action("Edit", new { id = absence.Id.Substring(absence.Id.LastIndexOf('-') + 1) })">
                                <i class="sprite-glyphicons_151_edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", new { id = absence.Id.Substring(absence.Id.LastIndexOf('-') + 1) })">
                                <i class="sprite-glyphicons_016_bin"></i>
                            </a>
                        </td>
                    }
            </tr>
        }
    </table>
    </div>
</div>
