@model MatchViewModel
@{
    ViewBag.Title = "Detaljer";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>Match</legend>
    @Html.DisplayFor(model => model.Match, "MatchDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditDetails", new { id = Model.Match.Id })
        | @Html.ActionLink("Ta bort", "Delete", new { id = Model.Match.Id })</p>
    }
    <h3>Hemmalag</h3>
    @Html.DisplayFor(model => model.HomeTeam, "TeamDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditTeam", new { id = Model.Match.Id, isHomeTeam = true })</p>
    }
    <h3>Bortalag</h3>
    @Html.DisplayFor(model => model.AwayTeam, "TeamDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditTeam", new { id = Model.Match.Id, isHomeTeam = false })</p>
    }
</fieldset>