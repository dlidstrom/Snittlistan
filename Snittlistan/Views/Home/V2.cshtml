@{
    ViewBag.Title = "Snittlistan V2";
    Layout = "";
}
<!DOCTYPE html>
<html lang="se">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <style type="text/css">
            body
            {
                /* necessary so that header doesn't hide content */
                padding-top: 40px;
            }
        </style>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        @Html.Partial("_Navbar")
        <section class="container-fluid">
            <section class="page-header">
                <h1>
                    Matchomgångar
                </h1>
            </section>
            <div class="row-fluid">
                <h2>Kommande</h2>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="alert alert-info">
                        <button class="close" data-dismiss="alert">
                            <i class="icon-pencil"></i>
                        </button>
                        Om du inte kan medverka, vänligen meddela detta så tidigt som möjligt.
                        <i class="icon-question-sign pull-right" title="Meddelande" data-content="Här tänkte jag att pennan är klickbar, och att man då kan redigera texten. Troligen måste man ha en viss roll för att ha möjlighet att ändra texten."></i>
                    </div>
                </div>
                <div class="span6">
                    <div class="alert alert-error">
                        <button class="close" data-dismiss="alert">&times;</button>
                        <button class="btn btn-mini btn-primary">Logga in</button> för att kvittera spel eller meddela din frånvaro.
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                @Html.Partial("_Turn3")
            </div>
            <div class="row-fluid">
                <h2>Avklarade<i class="icon-question-sign" title="Avklarade omgångar" data-content="Den här delen kommer vara en egen sida."></i></h2>
            </div>
            <div class="row-fluid">
                @Html.Partial("_CompletedTurns")
            </div>
            @*@Html.Partial("_Turn1")
            @Html.Partial("_Turn2")*@
        </section>

        @* Use content delivery networks *@
        @Content.Script(ScriptType.JQuery)
        @* Include other scripts from cdnjs.com when possible *@
        <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js" type="text/javascript"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js" type="text/javascript"></script>

        @* local scripts *@
        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
        <script type="text/javascript">
            $("button").click(function () {
                if ($(this).hasClass("active")) {
                    // active when clicked
                    $(this).removeClass("btn-warning");
                    $(this).addClass("btn-inverse");
                }
                else {
                    // inactive when clicked
                    $(this).removeClass("btn-inverse");
                    $(this).addClass("btn-warning");
                }
            });

            $("[data-content]").popover();
        </script>
    </body>
</html>
